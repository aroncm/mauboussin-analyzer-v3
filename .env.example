# Alpha Vantage API Key (get from https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Backend Port (default: 3001)
PORT=3001

# Frontend URL for CORS (production only, optional for development)
FRONTEND_URL=https://your-app.vercel.app

# Node environment (development/production)
NODE_ENV=development

# Sentry DSN for error monitoring (backend - optional, production only)
# Get from https://sentry.io after creating a project
SENTRY_DSN=your_sentry_backend_dsn_here

# Frontend Sentry DSN (optional, production only)
# Add to Vercel environment variables as VITE_SENTRY_DSN
# VITE_SENTRY_DSN=your_sentry_frontend_dsn_here

# Stripe Keys (get from https://dashboard.stripe.com/apikeys)
# Backend - add to Railway environment variables
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend - add to Vercel environment variables
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
